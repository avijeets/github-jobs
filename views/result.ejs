<h1>Job Explorer Results</h1>
<p> Enjoy the job postings below!</p>
<hr>

<div class="container">
	<% data.forEach(function(jobs){ %>
		<div class="content">
		        <div class="left"><%= jobs["title"] %></div> 
		        <div class="right"><span class="date">Posted on: <%= jobs["created_at"] %></span></div>
		        <div class="company" ><%= jobs["company"] %>  - <%= jobs["location"] %> </div>
				<div class="description"><%- jobs["description"] %></div>
		        <div class ="apply"><%- jobs["how_to_apply"] %></div>
		    </div>
		</div>
		<hr>
    <% }); %>  

